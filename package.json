  "devDependencies": {
    "@inway/prettier-config": "^1.0.1",
    "@types/node": "^20.3.0",
    "@types/react": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.44.0",
    "eslint-plugin-react": "^7.32.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.3"
